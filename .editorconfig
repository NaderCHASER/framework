root = true

[*]
end_of_line = lf
charset = utf-8

[*.php]
indent_style = tab
tab_width = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.{js,css}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
